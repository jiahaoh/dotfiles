# Edit/Refresh .bash_profile
# alias refreshp="source ~/.bash_profile"
#alias refresha="source ~/.aliases"
# alias ep="atom ~/.bash_profile"
alias ea="code ~/.aliases"


# Easier navigation: .., ..., ...., ....., ~ and -
alias ~="cd ~"
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias u="cd ..;ls"

# Clear
alias c="clear"

# Shortcuts
alias dl="cd ~/Downloads"
alias dt="cd ~/Desktop"
alias dc="cd ~/Documents"
alias gt="cd ~/Desktop/Docs/GitHub"

